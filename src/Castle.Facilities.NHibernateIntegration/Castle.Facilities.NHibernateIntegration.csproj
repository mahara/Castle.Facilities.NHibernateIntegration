<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\buildscripts\common.props"></Import>

  <PropertyGroup>
    <TargetFrameworks>net7.0;net6.0;net48</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>Castle.Facilities.NHibernateIntegration</AssemblyName>
    <RootNamespace>Castle.Facilities.NHibernateIntegration</RootNamespace>

    <Title>Castle.Facilities.NHibernateIntegration</Title>
    <Description>Castle.Facilities.NHibernateIntegration</Description>

    <PackageId>Castle.Facilities.NHibernateIntegration</PackageId>
    <PackageTags>castle, nhibernate, nhibernateintegration</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="[4.4.1,5)" />
    <PackageReference Include="Castle.Services.Transaction" Version="[5.4.0,5.5)" />
    <PackageReference Include="Castle.Windsor" Version="[5.1.2,6)" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="NHibernate" Version="5.3.14" />
    <PackageReference Include="System.Text.Json" Version="7.0.0" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net7.0' OR '$(TargetFramework)' == 'net6.0'">
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net48'">
    <Reference Include="System.Transactions" />
  </ItemGroup>

</Project>
